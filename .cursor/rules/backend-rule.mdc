  ON public.user_stats
  FOR SELECT
  TO authenticated
  USING (
    EXISTS (
      SELECT 1 FROM public.users
      WHERE users.id = user_stats.user_id
      AND users.deleted_at IS NULL
      AND (
        users.id = auth.uid()
        OR users.email_verified = TRUE
      )
    )
